@import "../../lib/weui.wxss";

.head-box {
  position: relative;
  height: 40%;
}

.title {
  padding-top: 30rpx;
  font-family: 'Courier New', Courier, monospace;
  font-size: 50rpx;
  text-align: center;
}

.section {
  position: absolute;
  width: 100%;
  background: white;
  bottom: 0;
}

.picker-day {
  padding: 26rpx;
  background-color: #FFFFFF;
}

.choose-day-text {
  float: right;
  padding-right: 50rpx;
}


.filtrate {
  display: flex;
  flex-direction: row;
  width: 100%;
}


.piker-more {
  flex: 1;
}

.choose-more {
  float: right;
  text-align: right;
  padding-right: 76rpx;
  padding-top: 17.5rpx;
  padding-bottom: 17.5rpx;
  width: 100%;
}

.select_box {
  flex: 0.5;
  background: #fff;
  width: auto;
  margin: 0;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;

}

.select_text {
  font-size: 28rpx;
  flex: 1;
  line-height: 86rpx;
  height: 86rpx;
  padding-left: 26rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  box-sizing: border-box;
  border-radius: 0 0 4% 4%;
  overflow-y: auto;
  border-top: 0;
  background: white;
  transition: height 0.3s;
  z-index: 2000;
  box-shadow: #cccccc 0 2rpx 2rpx 2rpx;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  padding-left: 26rpx;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}

.booking-options-view {
  width: 100%;
  height: 60%;
}

.booking-option {
  position: relative;
  width: auto;
  height: auto;
  background: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: #cccccc 0 2rpx 2rpx 2rpx;
  overflow: hidden;
}



.booking-option-hover-class {
  background: rgba(179, 172, 172, 0);
}

.booking-option .t-title {
  font-size: 35rpx;
  font-family: 'Courier New', Courier, monospace;
  font-weight: bold;
}

.booking-option .t-left {
  font-size: 30rpx;
  color: #777;
  float: left;
}

.booking-option .t-right {
  font-size: 30rpx;
  color: #777;
  float: right;
}